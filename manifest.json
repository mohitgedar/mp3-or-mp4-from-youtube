{
    "name":"Youtube to mp3",
    "version":"0.1",
    "manifest_version":2,
    "browser_action":{
        "default_popup":"html and css/popup.html",
        "default_icon":"img/logo96.png"
    },
    "icons":{
        "96":"img/logo96.png",
        "64":"img/logo64.png"
    },
    "permissions": [
        "tabs",               
        "activeTab",           
        "storage",
        "https://utomp3.com/*",
        "https://www.youtube.com/*"           
    ],
    "content_scripts": [
      {
        "matches": ["https://utomp3.com/*"], 
        "js": ["scripts/contentScript.js"],
        "run_at": "document_idle"
      }
    ],
    "background": {
        "scripts": ["scripts/script.js"],
        "persistent": true
      }
}